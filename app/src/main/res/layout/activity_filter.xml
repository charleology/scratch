<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/nighty"
    android:orientation="vertical"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    android:theme="@style/Theme.Scratch.noActionbarAndStatusBar"
    tools:context=".Filter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="10">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="back"
                    android:src="@drawable/ic_round_arrow_back_ios_24"
                    app:tint="@color/textgray"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:text="Filter"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:gravity="end">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_filter_alt_24"
                    app:tint="@color/textgray"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/elementsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pet Type"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/dogChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="DOG"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/catChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="CAT"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:layout_marginVertical="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated Age"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/puppyChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="PUPPY"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/adultChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="ADULT"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/seniorChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="SENIOR"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:layout_marginVertical="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:saveEnabled="true"
                        app:selectionRequired="true"
                        app:singleLine="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/maleChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="MALE"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/femaleChip"
                            style="@style/My_Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:text="FEMALE"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:layout_marginVertical="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show only liked pets."
                    android:textColor="@color/black"
                    android:textSize="27sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/likedOnlySwitch"
                    android:paddingEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingHorizontal="15dp">

            <Button
                android:id="@+id/filterApplyBtn"
                style="@style/pinkButton_style"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="APPLY"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>