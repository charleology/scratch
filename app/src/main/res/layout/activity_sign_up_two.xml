<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signupLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <LinearLayout
                android:id="@+id/btnLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:onClick="back"
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_round_arrow_back_ios_24"
                    app:tint="@color/textgray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/elementsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sign Up"
                    android:textColor="@color/textgray"
                    android:textSize="40sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/circlelogo_gradient" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="7dp"
                android:clickable="true"
                android:foreground="@drawable/ic_round_camera_alt_24"
                android:foregroundGravity="center"
                android:foregroundTint="@color/textgray"
                app:cardCornerRadius="100dp"
                tools:ignore="SpeakableTextPresentCheck">

                <ImageView
                    android:clickable="true"
                    android:id="@+id/ivsignupPicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/tfsignupAddress"
                style="@style/textField_style"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginVertical="12dp"
                android:gravity="start"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:paddingVertical="20dp" />

            <Spinner
                android:id="@+id/spsignupBarangay"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:editable="false"
                android:inputType="none"
                android:textColor="@color/textgray"
                android:id="@+id/spsignupMunicipality"
                style="@style/textField_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                tools:ignore="SpeakableTextPresentCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <EditText
                    android:editable="false"
                    android:inputType="none"
                    android:textColor="@color/textgray"
                    android:id="@+id/spsignupProvince"
                    style="@style/textField_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:editable="false"
                    android:id="@+id/tfsignupZip"
                    style="@style/textField_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="2"
                    android:textColor="@color/textgray"
                    android:inputType="none" />

            </LinearLayout>

            <Button
                android:id="@+id/btnsignupCreate"
                style="@style/pinkButton_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="25dp"
                android:text="create account" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>