<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/dogs_blur"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:text="Log-In or Sign-Up"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="30dp"
                android:text="to get started."
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/circlelogo_white" />

    </LinearLayout>

    <EditText
        android:id="@+id/emailTF"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        style="@style/textField_style"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/passTF"
        style="@style/textField_style"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Forgot Password?"
        android:textColor="@color/pink"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">

        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/circleButton_style"/>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pinkButton_style"
            android:text="log in"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/orangeButton_style"
            android:text="sign up"/>

    </LinearLayout>


</LinearLayout>