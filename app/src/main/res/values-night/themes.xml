<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Scratch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#fb528b</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#d81c60</item>
        <item name="colorSecondaryVariant">@color/darkpink</item>
        <item name="colorOnSecondary">@color/pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:autofilledHighlight" tools:targetApi="o">@android:color/transparent</item>
        <item name="fontFamily">@font/productsans_regular</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <!-- custom styles silong-->

    <!-- custome styles statusbar-->

    <style name="Theme.Scratch.noActionbarAndStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>

    </style>



    <style name="textField_style">
        <!-- Change textfield width and height on tf_background.xml -->
        <item name="android:layout_width">370dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColorHint">@color/textgray</item>
        <item name="android:background">@drawable/tf_background</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="pinkButton_style">
        <item name="android:width">370dp</item>
        <item name="android:height">60dp</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whitey</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="orangeButton_style">
        <item name="android:width">370dp</item>
        <item name="android:height">60dp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whitey</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="circleButton_style" parent="Widget.MaterialComponents.Button">
        <item name="android:width">90dp</item>
        <item name="android:height">100dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">50dp</item>
        <item name="icon">@drawable/ic_round_chevron_right_24</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">60dp</item>
        <item name="android:paddingStart">17dp</item>
    </style>

    <style name="spinner_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">370dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColorHint">@color/textgray</item>
        <item name="android:background">@drawable/spin_background</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textSize">15sp</item>


    </style>

</resources>